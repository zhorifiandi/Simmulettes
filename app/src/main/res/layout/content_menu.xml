<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zhorifiandi.simmulettes.MenuActivity"
    tools:showIn="@layout/activity_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textSize="6pt"
            android:alpha="0.9"
            android:id="@+id/buttonLogout"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18pt"
            android:text="Large Text"
            android:textColor="#FFFFFF"
            android:padding="10pt"
            android:id="@+id/textViewUserEmail"
            android:layout_gravity="left" />

        <Button
            android:text="Take Driving Test Simulation"
            android:layout_marginTop="10pt"
            android:layout_margin="10pt"
            android:layout_width="match_parent"
            android:layout_height="50pt"
            android:textSize="14pt"
            android:layout_below="@+id/buttonLogout"
            android:layout_centerHorizontal="true"
            android:background="#19233c"
            android:textColor="#FFFFFF"
            android:alpha="0.9"
            android:id="@+id/go_ujian" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
