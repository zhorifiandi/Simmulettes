<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_sim_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sashinovitasari.simulletes.TheoryTest"
    android:background="#303030">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="247dp"
        />

    <TextView
        android:id="@+id/score"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="247dp"
        />

    <Button
        android:id="@+id/menu"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:text="Menu"
        android:textSize="10dp"
        android:onClick="gotoMenu"
        />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/darker_gray"

        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/problem"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="11111111111111sssssssssssssssssssssssssssssssssssssss"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/darker_gray"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/choice_a"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="20dp"
        android:text="Ajjjjjjjjjjjjjjjjjjjjqqrrrrrrrrrrrrrrrrrrrrrttttttttttttttttttttt."
        android:background="#D3D3D3"
        android:onClick="getAnswer"
        android:padding="6dp"
        android:gravity="left|center_vertical"
        android:textAllCaps="false"

        />
    <Button
        android:id="@+id/choice_b"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="70dp"
        android:text="B."
        android:padding="6dp"
        android:gravity="left|center_vertical"
        android:background="#D3D3D3"
        android:onClick="getAnswer"
        />
    <Button
        android:id="@+id/choice_c"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="120dp"
        android:text="C."
        android:padding="6dp"
        android:gravity="left|center_vertical"
        android:background="#D3D3D3"
        android:onClick="getAnswer"
        />
    <Button
        android:id="@+id/choice_d"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="170dp"
        android:text="B."
        android:padding="6dp"
        android:gravity="left|center_vertical"
        android:background="#D3D3D3"
        android:onClick="getAnswer"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="470dp"
        android:layout_marginTop="230dp"
        android:onClick="proceed"
        android:text="NEXT"
        />

    <Button
        android:id="@+id/verify"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="230dp"
        android:onClick="verify"
        android:enabled="false"
        android:text="VERIFY"
        />

</RelativeLayout>
